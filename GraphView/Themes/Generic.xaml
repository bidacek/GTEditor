<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GraphView">
    <Style TargetType="{x:Type local:GraphView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GraphView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <Rectangle Fill="{DynamicResource AccentColorBrush}" StrokeDashArray="5" Stroke="#FFFFFFFF"
                       Visibility="Visible" x:Name="rectangle" Width="50" Height="50" 
                       StrokeDashOffset="0" StrokeThickness="1" RadiusX="0" RadiusY="0"
                       Canvas.Left="0" Canvas.Top="0"/>
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
